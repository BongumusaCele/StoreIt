<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:background="@color/green_darcker_1"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="11dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:gravity="center"
        android:text="Add Item"
        android:textColor="#fff"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edtItemName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:hint="Item Name:"
        android:inputType="text"
        android:padding="11dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAddItem"
        tools:layout_editor_absoluteX="21dp" />

    <EditText
        android:id="@+id/edtItemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:hint="Item Category:"
        android:inputType="text"
        android:padding="11dp"
        app:layout_constraintTop_toBottomOf="@+id/edtItemName"
        tools:layout_editor_absoluteX="21dp" />

    <EditText
        android:id="@+id/edtItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:hint="Item Description:"
        android:inputType="text"
        android:padding="11dp"
        app:layout_constraintTop_toBottomOf="@+id/edtItemCategory"
        tools:layout_editor_absoluteX="21dp" />

    <EditText
        android:id="@+id/edtItemDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:hint="Date of Acquisation:"
        android:inputType="text"
        android:padding="11dp"
        app:layout_constraintTop_toBottomOf="@+id/edtItemDescription"
        tools:layout_editor_absoluteX="21dp" />

    <Button
        android:id="@+id/btnAddTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:text="Take Photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtItemDate" />

    <Button
        android:id="@+id/btnAddFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:text="Add File"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddTakePhoto" />

    <Button
        android:id="@+id/btnAddTheItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="104dp"
        android:text="Add Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddFile" />

    <ImageView
        android:id="@+id/imageViewPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toEndOf="@+id/btnAddTakePhoto"
        app:layout_constraintTop_toBottomOf="@+id/edtItemDate"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>