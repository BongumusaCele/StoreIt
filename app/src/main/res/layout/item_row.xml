<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/categoryRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="11dp">

            <ImageView
                android:id="@+id/ItemImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/purple_200"
                android:contentDescription="Category Image"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/txtItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="47dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_conversion_absoluteWidth="300dp" />

                <TextView
                    android:id="@+id/txtItemCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Category:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_editor_absoluteY="63dp"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_conversion_absoluteWidth="300dp" />

                <TextView
                    android:id="@+id/txtItemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="47dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_conversion_absoluteWidth="300dp" />

                <TextView
                    android:id="@+id/txtItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Acquisation:"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="27dp"
                    tools:layout_editor_absoluteY="63dp"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_conversion_absoluteWidth="300dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/optionsMenuItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_more_vert"
            android:layout_marginLeft="350dp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>